{
  "patterns": [
    {"name": "Failed password", "regex": "Failed password.*from ([\\d.]+)", "severity": "high"},
    {"name": "Invalid user", "regex": "Invalid user.*from ([\\d.]+)", "severity": "medium"},
    {"name": "Port scan", "regex": "Possible port scan.*from ([\\d.]+)", "severity": "low"},
    {"name": "SQL Injection", "regex": "(SELECT|UNION|INSERT|UPDATE|DELETE|DROP|--|;|\'|\")", "severity": "high"},
    {"name": "XSS Attack", "regex": "(<script>|javascript:|onerror=|onload=)", "severity": "high"},
    {"name": "LFI/RFI", "regex": "(\.\./|/etc/passwd|/proc/self/environ|http[s]?://)", "severity": "high"},
    {"name": "Brute Force", "regex": "authentication failure|login failed|excessive login attempts", "severity": "medium"},
    {"name": "DDoS SYN Flood", "regex": "SYN flood|Possible SYN flooding|TCP SYN flood", "severity": "high"},
    {"name": "DDoS HTTP Flood", "regex": "HTTP flood|excessive requests|Too many requests", "severity": "high"}
  ],
  "log_file": "ids_ips.log",
  "firewall": "auto",
  "net_patterns": [
    {"name": "TCP SYN Scan", "type": "tcp_syn"},
    {"name": "ICMP Echo", "type": "icmp_echo"},
    {"name": "ICMP Regex", "type": "ip_regex", "regex": "ICMP echo-request"}
  ]
}
